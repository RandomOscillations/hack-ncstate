SERVER_BASE_URL=http://localhost:4000

# Agent role: "publisher", "subscriber", or "supervisor"
AGENT_MODE=publisher
AGENT_NAME=agent-1

# Demo reliability flags
DEMO_CACHE=1
MOCK_SOLANA=1

# Bounty (0.05 SOL in lamports)
BOUNTY_LAMPORTS=50000000
AGENT_PUBKEY=demo-agent

# LLM provider: "openai", "anthropic", or "gemini" (only needed when DEMO_CACHE=0)
LLM_PROVIDER=openai
OPENAI_MODEL=gpt-4o
ANTHROPIC_MODEL=claude-3-5-sonnet-latest
GEMINI_MODEL=gemini-2.5-pro
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GEMINI_API_KEY=

# Optional debugging / verification
SHOW_PROMPTS=0
REASONING_TEST=0

# Solana (only needed when MOCK_SOLANA=0)
SOLANA_RPC_URL=https://api.devnet.solana.com
AGENT_KEYPAIR_PATH=../../.secrets/agent.json
ESCROW_PUBKEY=

# Polling
POLL_INTERVAL_MS=2000
POLL_TIMEOUT_MS=300000
