SERVER_BASE_URL=http://localhost:4000

# Demo reliability flags
DEMO_CACHE=1
MOCK_SOLANA=1

# Bounty (0.05 SOL in lamports)
BOUNTY_LAMPORTS=50000000
AGENT_PUBKEY=demo-agent

# LLM provider: "openai" or "anthropic" (only needed when DEMO_CACHE=0)
LLM_PROVIDER=openai
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# Solana (only needed when MOCK_SOLANA=0)
SOLANA_RPC_URL=https://api.devnet.solana.com
AGENT_KEYPAIR_PATH=../../.secrets/agent.json
ESCROW_PUBKEY=

# Polling
POLL_INTERVAL_MS=2000
POLL_TIMEOUT_MS=300000
